{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "JwtOptions": {
      "SecretKey": "REPLACE_WITH_SECRET_FROM_SECRETS_MANAGER",
      "Issuer": "https://your-domain.com",
      "Audience": "your-app-api",
      "RequireHttps": true
    }
  },
  "ConnectionStrings": {
    "MSSQLServer": "REPLACE_WITH_CONNECTION_STRING"
  },
  "App": {
    "BaseUrl": "http://localhost:3000",
    "AppName": "YourAppName",
    "Version": "1.0.0"
  },
  "GmailSettings": {
    "Email": "REPLACE_WITH_EMAIL",
    "Password": "REPLACE_WITH_APP_PASSWORD",
    "Host": "smtp.gmail.com",
    "Port": 587,
    "DisplayName": "YourAppName Support"
  }
}